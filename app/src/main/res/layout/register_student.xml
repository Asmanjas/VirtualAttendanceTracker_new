<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".register_student">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register/LogIn"
            android:fontFamily="@font/merienda"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/first_name_register_student"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:hint="FIRST NAME"
            android:inputType="text" />

        <EditText
            android:id="@+id/last_name_register_student"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:hint="LAST NAME"
            android:inputType="text" />

        <EditText
            android:id="@+id/roll_number_register_student"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:hint="ROLL NUMBER [174CA***]" />

        <EditText
            android:id="@+id/password_register_student"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/retype_password_register_student"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:hint="RE-TYPE PASSWORD"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/register_button_register_student"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_activity_main_buttons"
            android:text="REGISTER"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#fff">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Already registered?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white">

        <Button
            android:id="@+id/login_button_register_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_activity_main_buttons"
            android:text="log in"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
