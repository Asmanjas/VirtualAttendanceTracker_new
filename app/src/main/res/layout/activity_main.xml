<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="25dp"
        >

        <TextView
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merienda"
            android:text="Welcome"
            android:textAlignment="textStart"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:layout_width="305dp"
            android:layout_height="39dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/merienda"
            android:text="to Student + Faculty mode"
            android:textAlignment="viewStart"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:text="This mode tracks the attendance of the students of class and the data gathered from this mode can be used for official purposes."
            android:textAlignment="viewStart"
            android:textSize="16sp" />



        <LinearLayout
            android:layout_margin="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            >


            <Button
                android:id="@+id/button_student_login"
                android:layout_width="129dp"
                android:layout_height="76dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_style_new"

                android:text="student"
                android:textAlignment="center"
                android:textColor="#fff" />

            <Button
                android:id="@+id/button_faculty_login"
                android:layout_width="134dp"
                android:layout_height="75dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_style_new"

                android:text="Faculty"
                android:textColor="#fff" />


        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

