<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gbackground"

    tools:context=".Monday">


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <TextView
        android:id="@+id/time_start1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/textview_shape"
        android:clickable="true"
        android:padding="8dp"
        android:text="click here"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/spinner1"
        app:layout_constraintTop_toBottomOf="@+id/titleBar2" />

    <TextView

        android:id="@+id/time_end1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/textview_shape"
        android:padding="8dp"
        android:text="click here"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_start1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/time_start1" />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <TextView
        android:id="@+id/time_start2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textview_shape"
        android:padding="8dp"
        android:text="TextView2"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/spinner2"
        app:layout_constraintTop_toBottomOf="@+id/time_start1" />

    <TextView
        android:id="@+id/time_end2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/textview_shape"
        android:padding="8dp"
        android:text="TextView2"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_start2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/time_start2" />


    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <TextView
        android:id="@+id/time_start3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textview_shape"
        android:padding="8dp"
        android:text="TextView3"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/spinner3"
        app:layout_constraintTop_toBottomOf="@+id/time_start2" />

    <TextView
        android:id="@+id/time_end3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/textview_shape"
        android:padding="8dp"
        android:text="TextView3"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_start3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/time_start3" />

    <TextView
        android:id="@+id/titleBar"
        android:layout_width="170dp"
        android:layout_height="35dp"

        android:layout_marginTop="50dp"
        android:text="Subject Name"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/titleBar3"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"

        android:text="End Time"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/titleBar2"
        app:layout_constraintStart_toEndOf="@+id/titleBar2" />

    <TextView
        android:id="@+id/titleBar2"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"

        android:text="Start Time"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/titleBar"
        app:layout_constraintStart_toEndOf="@+id/titleBar" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner3" />

    <TextView
        android:padding="8dp"
        android:background="@drawable/textview_shape"
        android:id="@+id/time_start4"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="TextView3"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/spinner3"
        app:layout_constraintTop_toBottomOf="@+id/time_start3" />

    <TextView
        android:padding="8dp"
        android:background="@drawable/textview_shape"
        android:id="@+id/time_end4"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView3"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/time_start4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/time_start4" />


    <LinearLayout
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="131dp"
        android:background="@color/green"
        android:orientation="vertical"
        android:padding="25dp"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"

            android:text="Monday"
            android:fontFamily="@font/merienda"
            android:textColor="@color/white"
            android:textSize="35sp"


            />
    </LinearLayout>

    <Button
        android:id="@+id/next_button_monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_activity_main_buttons"
        android:text="next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner4"
        app:layout_constraintVertical_bias="0.73" />
</android.support.constraint.ConstraintLayout>
