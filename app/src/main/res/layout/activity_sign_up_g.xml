<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gbackground"
    android:orientation="vertical"
    tools:context="com.aptech.asmanjas.virtualattendancetracker.SignUpG">

    <EditText
        android:id="@+id/repassword_signup_g"
        android:layout_width="287dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_shape"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/signup_button_signupg"
        app:layout_constraintStart_toStartOf="@+id/get_date_module_faculty" />

    <EditText
        android:id="@+id/password_signup_g"
        android:layout_width="287dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_shape"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/repassword_signup_g"
        app:layout_constraintStart_toStartOf="@+id/get_date_module_faculty" />

    <EditText
        android:id="@+id/first_name_signup_g"
        android:layout_width="287dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textview_shape"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/last_name_signup_g"
        app:layout_constraintStart_toStartOf="@+id/get_date_module_faculty"
        app:layout_constraintTop_toBottomOf="@+id/get_date_module_faculty"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/email_address_signup_g"
        android:layout_width="287dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_shape"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/password_signup_g"
        app:layout_constraintStart_toStartOf="@+id/get_date_module_faculty" />

    <EditText
        android:id="@+id/last_name_signup_g"
        android:layout_width="287dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/textview_shape"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/email_address_signup_g"
        app:layout_constraintStart_toStartOf="@+id/get_date_module_faculty" />

    <TextView
        android:id="@+id/get_date_module_faculty"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/merienda"
        android:text="Registration"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <Button
        android:id="@+id/login_button_signup_g"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/shape_activity_main_buttons"
        android:text="Log In"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signup_button_signupg"
        android:layout_width="159dp"
        android:layout_height="50dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/shape_activity_main_buttons"
        android:text="NEXT"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/merienda"
        android:text="Already Registered?"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/login_button_signup_g"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
