<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Module_faculty">

    <TextView
        android:id="@+id/formLogo"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#7c6b47"
        android:scaleType="fitCenter"
        android:textColor="#ff000000"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/topic"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="TAKE  ATTENDANCE"
        android:textSize="29dp"
        android:textColor="#dfb488"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/formLogo"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/sss" />

    <TextView
        android:id="@+id/date_faculty_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:text="DATE"
        android:textColor="#101010"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/date_faculty_module"
        android:layout_alignStart="@+id/date_faculty_module"
        android:text="DD/MM/YYYY"
        android:textSize="14dp"
        android:textColor="#d6c0c0"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/date_faculty_module"
        android:layout_toStartOf="@+id/date_faculty_module"
        android:src="@drawable/sts" />

    <TextView
        android:id="@+id/faculty_name_faculty_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="FACULTY NAME"
        android:textColor="#151414"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="NAME"
        android:textSize="15dp"
        android:textColor="#d6c0c0"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        android:src="@drawable/books" />

    <TextView
        android:id="@+id/subject_faculty_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:text="SUBJECT"
        android:textColor="#151414"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:text="SUBJECT"
        android:textSize="15dp"
        android:textColor="#d6c0c0" />

    <Button
        android:id="@+id/take_attendance_button_faculty_module"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="66dp"
        android:background="@drawable/rounded"
        android:drawablePadding="5dp"
        android:text="@string/attendance"
        android:textColor="#121212"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tvItemSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/take_attendance_button_faculty_module"
        android:layout_alignStart="@+id/take_attendance_button_faculty_module"
        android:layout_below="@+id/take_attendance_button_faculty_module"
        android:layout_marginTop="46dp"
        android:text="TEST"
        android:textColor="#aaa"
        android:textSize="25dp"
        android:textStyle="italic" />


</RelativeLayout>
